<div class="movie-details"> 
    <div class="movie-details"> <!-- Nested container for styling (could be removed if not needed) -->
        <div class="trailer-container"> <!-- Container for the movie trailer -->
            <video width="100%" height="400px" controls> <!-- Video element for the trailer -->
                <source src="<%= movie.trailer_url %>" type="video/mp4"> <!-- Source of the trailer video -->
            </video>
        </div>
    </div>

    <img src="/<%= movie.poster_url %>" alt="<%= movie.title %> Poster"> <!-- Display the movie poster -->

    <div class="movie-info"> 
        <h2><%= movie.title %></h2> <!-- Display the movie title -->
        <p><%= movie.description %></p> <!-- Display the movie description -->
        <p class="category"><strong>Category:</strong> <%= category %></p> <!-- Display the movie category -->
        <p class="release-date"><strong>Release Date:</strong> <%= movie.release_year %></p> <!-- Display the release year -->
    </div>
    
    <div class="review-button-container"> <!-- Container for the review button -->
        <a href="/api/users/review/<%= movie.movie_id %>/<%= id %>" class="review-button">Write a Review</a> <!-- Link to write a review -->
    </div>
    
    <div class="watchlist-button-container"> <!-- Container for the watchlist button -->
        <a href="/api/watchList/add/<%= id %>/<%= movie.movie_id %>" class="watchlist-button">Add to Watchlist</a> <!-- Link to add the movie to the watchlist -->
    </div>
</div>